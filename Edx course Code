def hat_available(color):
    hat_colors = "black, red, green, white, blue, yellow"
    return(color.lower() in hat_colors)

have_hat = hat_available('green')
print('Hat available is', have_hat)

def bird_list(birds):
    bird_types = "crow, robin, parrot, eagle, sandpiper, hawk"
    return(birds.lower() in bird_types)

have_bird = bird_list('PARROT')
print('Bird available is', have_bird)



